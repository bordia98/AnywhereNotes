<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgnotes"
    tools:context="com.example.bordia98.notes.Passwordreset">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f6f500"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#000000"
        android:text="Please Enter your Email id:"
        android:gravity="center_horizontal"
        android:id="@+id/textres"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textres"
        android:textSize="20dp"
        android:textColor="#00b0c8"
        android:textStyle="bold"
        android:hint="Enter email address"
        android:textColorHint="#00b0c8"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:id="@+id/resetemailid"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/resetemailid"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="30dp"
        android:background="#ADD8E6"
        android:text="Submit"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/submit"
        android:layout_marginStart="36dp"
        android:background="#ADD8E6"
        android:text="Back"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:textColor="#000000"
        android:textSize="20dp"
        android:enabled="false"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_marginTop="82dp"
        android:text="" />
</RelativeLayout>
